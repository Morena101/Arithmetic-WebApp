<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddNumbersServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddNumbersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MultiplyNumbersServlet</servlet-name>
        <servlet-class>za.ac.tut.web.MultiplyNumbersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubtractNumbersServlet</servlet-name>
        <servlet-class>za.ac.tut.web.SubtractNumbersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DivideNumbersServlet</servlet-name>
        <servlet-class>za.ac.tut.web.DivideNumbersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNumbersServlet</servlet-name>
        <url-pattern>/AddNumbersServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MultiplyNumbersServlet</servlet-name>
        <url-pattern>/MultiplyNumbersServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubtractNumbersServlet</servlet-name>
        <url-pattern>/SubtractNumbersServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DivideNumbersServlet</servlet-name>
        <url-pattern>/DivideNumbersServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/file_not_found.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/number_format_error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>za.ac.tut.model.NumbersException</exception-type>
        <location>/negative_numbers_error.jsp</location>
    </error-page>
</web-app>
